# Django Production Environment Variables
# Copy this file to .env and fill in the actual values
# NEVER commit .env with real values to git!

# Django Core Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourusername.pythonanywhere.com,www.deorganized.com

# Database Configuration (Railway PostgreSQL)
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-railway-db-password
DB_HOST=your-project.railway.app
DB_PORT=5432

# For local development only
USE_SQLITE=False

# CORS Settings (Add your frontend domain)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://www.deorganized.com

